<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MealPlan.ConstraintLayout.Basic"
    tools:context=".ui.information.fragments.InformationFragment">

    <ListView
        android:id="@+id/info_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/height_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_information" />

    <TextView
        android:id="@+id/txt_view_support"
        style="@style/MealPlan.Text.Headline3.Bold"
        android:paddingVertical="@dimen/height_medium"
        android:text="@string/info_support"
        app:layout_constraintBottom_toTopOf="@id/img_view_pixa_bay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_view_pixa_bay"
        style="@style/MealPlan.ImageView"
        android:layout_width="0dp"
        android:layout_height="@dimen/width_big"
        android:layout_marginBottom="@dimen/height_medium"
        android:src="@drawable/ic_pixa_bay_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>