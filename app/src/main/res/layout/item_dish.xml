<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_item_dish"
    style="@style/MealPlan.CardView.CardLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_dish_item"
            style="@style/MealPlan.ImageView.square"
            android:layout_width="@dimen/picture_size_big_half"
            android:layout_height="@dimen/picture_size_big_half"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/txt_dish_name_dish_item"
            style="@style/MealPlan.Text.Headline3.Bold"
            android:layout_marginStart="@dimen/width_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_dish_item"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="favorite dish" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
