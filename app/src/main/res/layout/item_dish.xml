<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MealPlan.CardView.CardLayout">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/width_regular">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_img_dish_item"
            style="@style/MealPlan.CardView.Round.Small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txt_dish_name_dish_item">

            <ImageView
                android:id="@+id/img_dish_item"
                style="@style/MealPlan.ImageView.Normal"
                tools:src="@drawable/ic_launcher_background" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_dish_name_dish_item"
            style="@style/MealPlan.Text.Headline2.Bold"
            android:layout_width="@dimen/width_no"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/width_regular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/card_view_img_dish_item"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="favorite dish" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>