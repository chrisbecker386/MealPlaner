    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_meal">

    <fragment
        android:id="@+id/navigation_dish"
        android:name="de.writer_chris.babittmealplaner.ui.dish.DishFragment"
        android:label="@string/title_dish"
        tools:layout="@layout/fragment_meal" />

    <fragment
        android:id="@+id/navigation_meal"
        android:name="de.writer_chris.babittmealplaner.ui.mealplaner.MealFragment"
        android:label="@string/title_meal"
        tools:layout="@layout/fragment_dish" />

    <fragment
        android:id="@+id/navigation_shopping"
        android:name="de.writer_chris.babittmealplaner.ui.shoppinglist.ShoppingFragment"
