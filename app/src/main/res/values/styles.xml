<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.MealPlan.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.MealPlan.Button.Margin4" parent="Widget.MealPlan.Button">
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="Widget.MealPlan.Button.Margin8" parent="Widget.MealPlan.Button">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="Widget.MealPlan.FloatingActionButton" parent="">
        <item name="backgroundTint">?attr/colorSecondary</item>
    </style>

    <style name="Widget.MealPlan.FloatingActionButton.Mini">
        <item name="fabSize">mini</item>
        <item name="borderWidth">2dp</item>
    </style>


    <style name="Widget.MealPlan.Divider" parent="">
        <item name="android:background">?attr/colorOnSurface</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginVertical">4dp</item>
    </style>

    <style name="Widget.MealPlan.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:backgroundTint">?attr/colorSurface</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="Widget.MealPlan.ImageButton.Custom" parent="CardView">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">30dp</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="Widget.MealPlan.CardView.Round.Big" parent="CardView">
        <item name="android:layout_width">@dimen/lb_details_v2_logo_max_width</item>
        <item name="android:layout_height">@dimen/lb_details_v2_logo_max_width</item>
        <item name="android:layout_margin">@dimen/lb_basic_card_info_badge_margin</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">75dp</item>
        <item name="borderWidth">0dp</item>
    </style>

    <style name="Widget.MealPlan.CardView.Rounded.Big" parent="Widget.MealPlan.CardView.Round.Big">
        <item name="cardCornerRadius">20dp</item>
    </style>


    <style name="ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ImageView.Round.Big" parent="ImageView">
        <item name="android:layout_width">@dimen/lb_details_v2_logo_max_width</item>
        <item name="android:layout_height">@dimen/lb_details_v2_logo_max_width</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Widget.MealPlan.CardLayout" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cardBackgroundColor">?attr/colorAccent</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="MealPlan" />

    <style name="MealPlan.ConstraintLayout" parent="MealPlan">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/lb_browse_item_vertical_spacing</item>
    </style>

</resources>
